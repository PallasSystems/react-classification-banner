{
  "name": "@pallassystems/react-security-classification-banner",
  "version": "1.2.2",
  "description": "A library to generate  UK Security Classification Banners based on UK Government Guidance.",
  "homepage": "https://rscb.pallas.uk",
  "keywords": [
    "react",
    "security",
    "banner",
    "classification",
    "security classification banner"
  ],
  "license": "Apache-2.0",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "private": false,
  "dependencies": {
    "bootstrap": ">=5.3.0",
    "react": ">=19.0.0",
    "react-dom": "^19.0.0"
  },
  "peerDependencies": {
    "@types/react": ">=18.0.0",
    "bootstrap": ">=5.3.0",
    "react": ">=19.0.0",
    "react-dom": "^19.0.0"
  },
  "overrides": {
    "react-refresh": "0.14.0",
    "svgo": "3.0.2"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.2",
    "@eslint/compat": "^1.2.4",
    "@storybook/addon-actions": "^8.4.7",
    "@storybook/addon-essentials": "^8.4.7",
    "@storybook/addon-interactions": "^8.4.7",
    "@storybook/addon-links": "^8.4.7",
    "@storybook/addon-onboarding": "^8.4.7",
    "@storybook/addon-webpack5-compiler-swc": "^2.0.0",
    "@storybook/blocks": "^8.4.7",
    "@storybook/react": "^8.4.7",
    "@storybook/react-webpack5": "^8.4.7",
    "@storybook/test": "^8.4.7",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.1.0",
    "@types/jest": "^29.5.14",
    "@types/react-router-bootstrap": "^0.26.6",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "storybook": "^8.4.7",
    "stylelint": "^16.12.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": ">=5.7.0"
  },
  "scripts": {
    "clean": "rm -rf ./dist ./coverage eslint_report.json stylelint_report.json junit.xml",
    "build": "npm run clean && tsc && npm run build:storybook",
    "test": "jest",
    "storybook": "storybook dev -p 6006",
    "build:storybook": "storybook build",
    "analyse": "source-map-explorer 'build/static/js/*.js'",
    "eslint": "eslint --config eslint.config.mjs --output-file eslint_report.json --format json src/",
    "stylelint": "stylelint \"./src/**/*.css\" --formatter json --output-file stylelint_report.json",
    "lint": "npm run eslint && npm run stylelint"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/PallasSystems/react-security-classification-banner.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/index.js"
      },
      "default": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  }
}
